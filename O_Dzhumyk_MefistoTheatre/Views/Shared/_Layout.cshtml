<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MefistoTheatre Blog</title>

    @* --- Favicon Links --- *@
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    @* Ensure mefisto-logo.png is in wwwroot/images/ *@
    <link rel="icon" href="~/images/mefisto-logo.png" type="image/png" sizes="512x512">
    <link rel="apple-touch-icon" href="~/images/mefisto-logo.png" sizes="512x512">
    @* --- End Favicon Links --- *@

    @* --- Stylesheets --- *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Make sure you have a compatible Bootstrap Icons version if using offline, otherwise CDN is fine *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Remove or update [YourProjectName] if using component styles *@
    @* <link rel="stylesheet" href="~/[YourProjectName].styles.css" asp-append-version="true" /> *@

    @* --- Style for Background Image --- *@
    @* Consider moving this to site.css for better organization *@
    <style>
        body {
            /* Ensure theatre-background.jpg is in wwwroot/images/ */
            background-image: url('/images/theatre-background.jpg');
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            /* Add min-height to ensure body takes full viewport height for flex sticky footer */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Optional: Semi-transparent overlay for readability */
        /* body::before {
                    content: "";
                    position: fixed;
                    top: 0; left: 0; right: 0; bottom: 0;
                    background-color: rgba(0, 0, 0, 0.1);
                    z-index: -1; // Place behind content
                } */

        /* Style for main content area to potentially add background contrast */
        .main-content-area {
            flex-grow: 1; /* Needed for sticky footer */
            padding-top: 1rem; /* Add some space below header */
            padding-bottom: 1rem; /* Add some space above footer */
            /* Optional: Add a contrasting background for content */
            /* background-color: rgba(255, 255, 255, 0.95); */
            /* margin-top: 2rem; */ /* Adjust spacing if needed */
            /* margin-bottom: 2rem; */
            /* border-radius: 0.375rem; */
        }

        /* Ensure footer stands out */
        .footer {
            background-color: #ffffff; /* Ensure solid white background */
            /* mt-auto class is handled by flex layout on body */
        }

    </style>
    @* --- End Background Style --- *@

    @* Allow pages to inject their own styles *@
    @await RenderSectionAsync("Styles", required: false)
</head>
@* Apply flex classes directly to body for sticky footer *@
<body>
    <header>
        @* Render the _Header partial view - Ensure _Header.cshtml exists in Views/Shared *@
        @await Html.PartialAsync("_Header")
    </header>

    @* Apply class for potential styling and flex-grow for sticky footer *@
    <div class="container main-content-area">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* Footer will be pushed down by flex-grow on the main container *@
    @* Render the _Footer partial view - Ensure _Footer.cshtml exists in Views/Shared *@
    @await Html.PartialAsync("_Footer")


    @* --- Scripts --- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Allow pages to inject their own scripts *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>